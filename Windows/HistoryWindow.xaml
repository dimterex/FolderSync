<Window x:Class="FolderSyns.Windows.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:folderSyns="clr-namespace:FolderSyns"
        xmlns:windows="clr-namespace:FolderSyns.Windows"
        mc:Ignorable="d"
        Title="HistoryWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <windows:HistoryItemConverter x:Key="HistoryItemConverter" x:Name="HistoryItemConverter" />
            <windows:HistoryDateTimeConverter x:Key="HistoryDateTimeConverter" x:Name="HistoryDateTimeConverter" />
        </ResourceDictionary>
    </Window.Resources>
    <DataGrid Name="HistoryDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Время" Binding="{Binding DateTime, Converter={StaticResource HistoryDateTimeConverter}}" />
            <DataGridTextColumn Header="Файл" Binding="{Binding FileName}" />
            <DataGridTextColumn Header="Действие" Binding="{Binding Converter={StaticResource HistoryItemConverter}}" />
        </DataGrid.Columns>
    </DataGrid>
</Window>
